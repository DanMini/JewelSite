nav{background-color:#30475a;height:50px;width:100%;text-align:center}nav a{display:inline-block;padding:15px}@media(min-width:768px){#main-logo{position:relative;z-index:2;width:50%;margin:0 auto}#main-logo-mobile{display:none}}@media(max-width:767px){#main-logo{display:none}#main-logo-mobile{position:relative;z-index:2;width:60%;margin:15px 15px}.menu-container{margin-top:-55px}}#bg{position:fixed;top:-50%;left:-50%;width:200%;height:200%}#bg img{position:absolute;top:0;left:0;right:0;bottom:0;margin:auto;min-width:50%;min-height:50%}.title{position:absolute;color:#008000;font-size:40px;left:50%}.container{max-width:800px;width:100%;margin:auto}.post{position:relative;height:400px;display:flex;margin:5px;box-shadow:0 0 5px 0 black}.post img{width:100%}.post-body{margin:-5px 5px 0;background-color:#008000}.no-shadow{box-shadow:none}.pages{display:flex;flex-direction:row;justify-content:center;margin:2rem}.pages a{background-color:#808080;color:#fff;padding:.5rem .75rem;border:1px solid #fff;margin:0 .25rem}.pages a:hover{background-color:#999;text-decoration:none}.pages a.active{background-color:#f00}.three-dots{line-height:1;font-size:24px}