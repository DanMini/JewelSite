@model RingViewModel

@{
    ViewBag.Title = "Кольца — Ювелирный каталог";
}

<div class="row text-center header animate-in" data-anim-type="fade-in-up">
    <div class="head-title col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <h3>Кольца</h3>
    </div>
</div>
<div class="wrapper-category">
    <div class="container categories scroll">
        @await Component.InvokeAsync("ShowRingCategory")
    </div>
</div>
<div class="wrapper">
    @foreach (var ring in Model.Rings)
    {
    <div id="one" asp-controller="Home" asp-action="rings" asp-rout-id="@ring.Id">
        @{
            string status = @ring.Availability;
            string color = "lightblue";
            string colorDescription = "white";
            string wordStatus = "В наличии";
            if (status == "Нет в наличии")
            {
                color = "#CDCDCD";
                colorDescription = "#CDCDCD";
                wordStatus = "Нет в наличии";
            }
        }
        <p style="color:@color">@wordStatus</p>
        <p>
            <a asp-controller="Rings" asp-action="Ring" asp-route-id="@ring.Id" style="color:@colorDescription">
                @Html.Raw(ring.Name)
                <br>
                Цена: @ring.Price рублей
            </a>
        </p>
    </div>
    }
</div>