@model Chain

@{
        ViewBag.Title = @Model.Name + " — Ювелирный каталог";       
}

<div class="guide-block" style="margin-top: 150px;">
    <div class="flex-container">
        <div class="categoryInfo">
            <p>
                <a class="menu" id="newshover" asp-controller="Chains" asp-action="Index">Все цепи</a> — <a href="http://ss-team.ru/Bracelets?category=@Model.ChainCategory">Цепи категории «@Model.ChainCategory»</a>
            </p>
        </div>
    </div>
    <div class="flex-container">
        <div class="DescInfo">
            <p>Артикул: @Model.VendorCode</p>
            <p>Цена: @Model.Price рублей</p>
            <p>@Model.Availability</p>
        </div>
        <div class="nameInfo"><h1>@Model.Name</h1></div>
    </div>
    <div class="fullinfo">
        <div>@Html.Raw(Model.Info)</div>
    </div>
</div>

