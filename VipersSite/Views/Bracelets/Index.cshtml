@model BraceletViewModel

@{
    ViewBag.Title = "Браслеты — Ювелирный каталог";
}

<div class="row text-center header animate-in" data-anim-type="fade-in-up">
    <div class="head-title col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <h3>Браслеты</h3>
    </div>
</div>
<div class="wrapper-category">
    <div class="container categories scroll">
        @await Component.InvokeAsync("ShowBraceletCategory")
    </div>
</div>
<div class="wrapper">
    @foreach (var bracelet in Model.Bracelets)
    {
    <div id="one" asp-controller="Home" asp-action="Bracelets" asp-rout-id="@bracelet.Id">
        @{
            string status = bracelet.Availability;
            string color = "lightblue";
            string colorDescription = "white";
            string wordStatus = "В наличии";
            if (status == "Нет в наличии")
            {
                color = "#CDCDCD";
                colorDescription = "#CDCDCD";
                wordStatus = "Нет в наличии";
            }
        }
        <p style="color:@color">@wordStatus</p>
        <p>
            <a asp-controller="Bracelets" asp-action="Bracelet" asp-route-id="@bracelet.Id" style="color:@colorDescription">
                @Html.Raw(bracelet.Name)
                <br>
                Цена: @bracelet.Price рублей
            </a>
        </p>
    </div>
    }
</div>
